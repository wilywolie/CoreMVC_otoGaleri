@{
}
@model IEnumerable<carmodel>

<table class="table table-striped"> 

    <tr>
        <th>Foto</th>
        <th>Model Adı</th>
        <th>Model Yılı</th>
    </tr>
    @foreach (carmodel cm in @Model)
    {
        <tr class="my-3">
            <td class="w-40"><img height="200px" width="200px" class="img-fluid" src="~/assets/carimg/@cm.modelimgurl" /></td>
            <td class="w-20"><h4> @cm.modeladi</h4></td>
            <td class="w-20"><h4>  @cm.modelyili</h4></td>
            <td class="w-20"><a class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal" data-carid="@cm.modelid" >Satın AL</a></td>

           
        </tr>
        
    }
</table>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Satın alamk istediğinizden eminm misniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeçtim</button>
                <button type="button" class="btn btn-primary"  >evet</button>
            </div>
        </div>
    </div>
</div>

